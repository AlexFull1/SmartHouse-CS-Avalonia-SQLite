<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SmHmItrf.AddRoom"
        Title="AddRoom">
	<Grid ColumnDefinitions="200,200" RowDefinitions="50,50,50,50,50,50" Margin="5">
		
		<TextBlock Text="Room Name" Grid.Column="0" Grid.Row="0"></TextBlock>
		<TextBlock Text="Peripheral Id" Grid.Column="0" Grid.Row="1"></TextBlock>
		<TextBlock Text="Main Id" Grid.Column="0" Grid.Row="2"></TextBlock>
		<!--<TextBlock Text="Main Name" Grid.Column="0" Grid.Row="3"></TextBlock>
		<TextBlock Text="Main Code" Grid.Column="0" Grid.Row="4"></TextBlock>-->

		<TextBox Grid.Column="1" Grid.Row="0" x:Name="tRoomName"></TextBox>
		<TextBox Grid.Column="1" Grid.Row="1" x:Name="tPeripheralLightId"></TextBox>
		<TextBox Grid.Column="1" Grid.Row="2" x:Name="tMainLightId"></TextBox>
		<!--<TextBox Grid.Column="1" Grid.Row="3" x:Name="tMainLightName"></TextBox>
		<TextBox Grid.Column="1" Grid.Row="4" x:Name="tMainLightCode"></TextBox>-->

		<Button x:Name="bSaveRoom" Grid.Column="0" Grid.Row="3">Save</Button>
		<Button x:Name="bCancel" Grid.Column="1" Grid.Row="3">Cancel</Button>

	</Grid>
</Window>
